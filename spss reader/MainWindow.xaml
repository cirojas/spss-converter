<Window x:Class="spss_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spss_reader"
        mc:Ignorable="d"
        Title="Convertidor .sav a .csv" Height="200" Width="300">
    <Grid>
        <Label Content="Caracter de separación:" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="SeparatorOptions" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="coma ( , )"></ComboBoxItem>
            <ComboBoxItem Content="punto y coma ( ; )"></ComboBoxItem>
            <ComboBoxItem Content="tabulación"></ComboBoxItem>
            <ComboBoxItem Content="barra ( | )"></ComboBoxItem>
        </ComboBox>
        <CheckBox Name="GenearaMetadatos" Content="Generar archivo de metadatos" HorizontalAlignment="Left" Margin="50,79,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button Content="Abrir .sav" VerticalAlignment="Top" Click="Button_Click" Width="100" Margin="100,112,0,0" HorizontalAlignment="Left"/>

    </Grid>
</Window>
